<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RowText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SortButton" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/bright_purple</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="InfoText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>
</resources>